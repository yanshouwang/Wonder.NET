<UserControl x:Class="Wonder.WPF.Controls.EntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wonder.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="TEXT" Grid.Row="0" Grid.RowSpan="3"
                 Text="{Binding Str, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                 InputMethod.IsInputMethodEnabled="False"
                 PreviewTextInput="OnPreviewTextInput"
                 LostFocus="OnLostFocus"
                 CharacterCasing="Upper"
                 TextWrapping="Wrap" Padding="4"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="4">
            <RadioButton x:Name="ASCII" Content="ASCII" Checked="OnASCIIChecked"/>
            <RadioButton x:Name="HEX" Content="HEX" Margin="4,0,0,0" Checked="OnHEXChecked"/>
        </StackPanel>
    </Grid>
</UserControl>
