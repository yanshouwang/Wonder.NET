<Window x:Class="Wonder.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mvvm="http://prismlibrary.com/"
        mvvm:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}"
        Width="900" Height="600" MinWidth="600" MinHeight="400"
        Style="{StaticResource Wonder.Windows.Style.Window}">
    <Grid>
        <ContentControl Grid.Row="1" mvvm:RegionManager.RegionName="ContentRegion"/>
    </Grid>
</Window>
